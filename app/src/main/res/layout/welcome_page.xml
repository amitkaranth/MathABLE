<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124"
    android:orientation="vertical"
    tools:context=".welcome_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to MathABLE "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="37dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose a game to play"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Image-Text Match"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Greater Number"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b5"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Drag and Drop"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black">

        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b6"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Shapes"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b8"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Basic Math Quiz"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck">

        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#35b7ff"
            android:text="Memory Game"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            tools:ignore="SpeakableTextPresentCheck">

        </TextView>

    </LinearLayout>

</LinearLayout>